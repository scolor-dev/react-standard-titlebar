<div className="titlebar" style={{ backgroundColor: headerBg }}>
      <div className="titlebar__left" style={{ color: logoColor }}>
        {logo && <div className="titlebar__logo">{logo}</div>}
        <span className="titlebar__title">{title}</span>
      </div>
      <div className="titlebar__buttons">
        <button
          className="titlebar__btn titlebar__btn--min"
          style={{
            color: btnMinimize?.color || btnColor,
          }}
          onClick={onMinimize}
        >
          _
        </button>
        <button
          className="titlebar__btn titlebar__btn--max"
          style={{
            color: btnMaximize?.color || btnColor,
          }}
          onClick={isMaximized ? onRestore : onMaximize}
        >
          {isMaximized ? '❐🗗' : '□🗖'}
        </button>
        <button
          className="titlebar__btn titlebar__btn--exit"
          style={{
            color: btnExit?.color || btnColor,
          }}
          onClick={onClose}
        >
          ×
        </button>
      </div>
    </div>